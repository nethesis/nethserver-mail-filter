#!/usr/bin/perl -w

opendir my $dir, "/etc/rspamd/local.d" or die "[ERROR] Cannot open directory: $!";
my @files = readdir $dir;
closedir $dir;

foreach my $file (@files) {
next if (($file eq '.') || ($file eq '..'));
unlink  "/etc/rspamd/local.d/$file" or warn "[ERROR] Could not unlink $file: $!";
}
