#
# List of email domain name on localhost
#

{
    use esmith::DomainsDB;
    my $domainsDb = esmith::DomainsDB->open_ro();
    my @domains =  $domainsDb->domains();

    foreach my $domain (map { ($_->prop('TransportType') || '')  eq 'LocalDelivery' ? $_->key : ()
        } @domains) {
    $OUT .= "$domain\n";
    }
}
